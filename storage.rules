rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Test files - Allow all for testing
    match /test/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Product images - Original products folder
    match /products/{productId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.resource.size < 5 * 1024 * 1024 && // 5MB max
        request.resource.contentType.matches('image/.*');
    }
    
    // Product images - ProductsCatalog folder (for sale)
    match /ProductsCatalog/{category}/{productId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.resource.size < 5 * 1024 * 1024 && // 5MB max
        request.resource.contentType.matches('image/.*');
    }
    
    // Product images - ProductsSwapp folder (for swapp)
    match /ProductsSwapp/{category}/{productId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.resource.size < 5 * 1024 * 1024 && // 5MB max
        request.resource.contentType.matches('image/.*');
    }
    
    // User avatars
    match /avatars/{userId} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 2 * 1024 * 1024 && // 2MB max
        request.resource.contentType.matches('image/.*');
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 